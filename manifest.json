{
  "name": "Chatbot Exporter",
  "version": "0.1.0.beta.1",
  "manifest_version": 3,
  "description": "Your Helpful Chatbot Exporter",
  "author": "南川 <mark@cs-magic.com>",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "main.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
